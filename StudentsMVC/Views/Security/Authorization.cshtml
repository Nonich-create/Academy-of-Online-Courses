@model Students.MVC.ViewModels.AuthorizationViewModel

@{

    ViewData["Title"] = "Вход";
    Layout = "_LayoutAdditional";
}
<body>
    <div class="registration-form">
        <form method="post" asp-action="Authorization" asp-controller="Security"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label class="form_label">Email</label><br />
                <input type="text" class="form-control item" asp-for="Email" id="email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Пароль</label><br />
                <input type="password" class="form-control item" asp-for="Password" id="password" placeholder="Пароль">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe"></label><br />
                <input asp-for="RememberMe" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-block create-account" />
            </div>
            <div class="form-group">
                <a class="btn btn-block create-account" asp-area="" asp-controller="Students" asp-action="Create">Регистрация</a>
            </div>
            <div class="form-group">
                <a class="btn btn-block create-account" asp-area="" asp-controller="Home" asp-action="Index">Назад</a>
            </div>
        </form>
    </div>
</body>