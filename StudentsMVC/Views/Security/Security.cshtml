@model Students.MVC.ViewModels.UserViewModel
@{
    Layout = "_LayoutAdditional";
    ViewData["Title"] = "Редактирование профиля";
}
<body>
    <div class="registration-form">
        <form asp-action="Security" asp-controller="Security">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label class="form_label">Email</label><br />
                <input type="email" class="form-control item" asp-for="Email" id="email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Номер телефона</label><br />
                <input type="text" class="form-control item" asp-for="PhoneNumber" id="phoneNumber" placeholder="Номер телефона">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="ChangePassword" asp-route-id="@Model.Id" asp-route-Url="@Model.ReturnUrl" class="btn btn-block create-account">Смена пароля</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-block create-account" />
            </div>
            <div class="form-group">
                <input type="submit" value="Назад" asp-action="ReturnByUrl" asp-route-ReturnUrl="@Model.ReturnUrl" class="btn btn-block create-account" />
            </div>
        </form>
    </div>
</body>