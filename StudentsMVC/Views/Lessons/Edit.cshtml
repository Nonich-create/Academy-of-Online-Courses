@model Students.MVC.ViewModels.LessonViewModel
@{
    Layout = "_LayoutAdditional";
    ViewData["Title"] = "Редактирование урока";
}
<body>
    <div class="registration-form">
        <form asp-action="Edit">
            <div class="validation" asp-validation-summary="All"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="@Model.ReturnUrl" />
            <div class="form-group">
                <label class="form_label">Номер урока</label><br />
                <input type="text" class="form-control item" asp-for="NumberLesson" id="numberLesson" placeholder="Номер урока">
                <span asp-validation-for="NumberLesson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Названия урока</label><br />
                <input type="text" class="form-control item" asp-for="Name" id="Name" placeholder="Названия урока">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Описание урока</label><br />
                <textarea class="form-control item" asp-for="Description" id="description" placeholder="Описание урока"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Домашния работа</label><br />
                <textarea class="form-control item" asp-for="Homework" id="homework" placeholder="Домашния работа"> </textarea>
                <span asp-validation-for="Homework" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Курс</label><br />
                <select asp-for="CourseId" class="form-control custom-select">
                    @foreach (var item in Model.Courses)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-block create-account" />
            </div>
            <div class="form-group">
                <input type="submit" value="Назад" asp-action="ReturnByUrl" asp-route-ReturnUrl="@Model.ReturnUrl" class="btn btn-block create-account" />
            </div>
        </form>
    </div>
</body>
 