@using Students.DAL.Enum;
@model IEnumerable<Students.MVC.ViewModels.LessonViewModel>

@{
    ViewData["Title"] = $"Занятия";
    Layout = "_Layout";
}
<body>
    @{
        int skip = 0;
        if (Model.Count() > 0)
            skip = Model.Max(s => s.Id);
        int take = Model.Count();
    }
    <form method="post" asp-controller="Lessons">
        <p>
            <select name="serachParameter" class="form-control">
                @foreach (var item in Html.GetEnumSelectList<EnumSearchParametersLesson>())
                {
                    @if (item.Value == @ViewData["serachParameter"].ToString())
                    {
                        <option selected="selected" value="@item.Value" name="serachParameter">@item.Text</option>
                    }
                    <option value="@item.Value" name="serachParameter">@item.Text</option>
                }
            </select>
            <input type="text" name="searchString" size="40" value="@ViewData["searchString"]" />
            <input type="hidden" name="take" value="10" />
            <input class="btn btn-primary"
                   type="submit" value="Поиск" />
        </p>
    </form>
    <form method="post" asp-controller="Lessons">
        <p>
            <input type="hidden" name="action" value="@EnumPageActions.Add" />
            <input type="hidden" name="take" value="@take" />
            <input type="hidden" name="searchString" value="@ViewData["searchString"]" />
            <input type="hidden" name="serachParameter" value="@ViewData["serachParameter"]" />
            <input class="btn btn-primary"
                   type="submit" value="ещё" />
        </p>
    </form>
    <table class="purpleHorizon">
        <thead>
            <tr>
                <th>
                    Курс
                </th>
                <th>
                    №
                </th>
                <th>
                    Названия урока
                </th>
                <th>
                    Домашния задания
                </th>
                <th>
                    Описания урока
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberLesson)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Homework)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td>
                        <a class="btn btn-primary"
                           asp-action="Edit" asp-route-id="@item.Id" asp-route-Url="@Context.Request.Path">Редактирование</a>
                        <a class="btn btn-primary"
                           asp-action="Details" asp-route-id="@item.Id">Подробнее</a>
                        <form method="post" asp-controller="Lessons" asp-action="Delete">
                            <button class="btn btn-danger" asp-controller="Lessons" asp-action="Delete" asp-route-LessonId="@item.Id">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>

            }
            <tr>
                <td>
                    <a class="btn btn-primary"
                       asp-action="CreateWithCourse">Добавить занятия</a>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="container">
        <form method="post" asp-controller="Lessons">
            <p>
                <input type="hidden" name="action" value="@EnumPageActions.Back" />
                <input type="hidden" name="skip" value="@skip" />
                <input type="hidden" name="take" value="10" />
                <input class="btn btn-primary"
                       type="submit" value="Предыдущие" />
            </p>
        </form>
        <form method="post" asp-controller="Lessons">
            <p>
                <input type="hidden" name="action" value="@EnumPageActions.Next" />
                <input type="hidden" name="skip" value="@skip" />
                <input type="hidden" name="take" value="10" />
                <input class="btn btn-primary"
                       type="submit" value="Следущие" />
            </p>
        </form>
    </div>
</body>
