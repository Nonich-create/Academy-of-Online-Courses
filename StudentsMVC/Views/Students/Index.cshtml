@model Students.MVC.Models.PaginationModel<Students.MVC.ViewModels.StudentViewModel>
@using System.Linq;
@using Students.DAL.Enum;
@{
    ViewData["Title"] = "Страница студентов";
    Layout = "_Layout";
}

<body>
    <form method="post" asp-controller="Students">
        <select name="serachParameter" class="form-control">
            @foreach (var item in Html.GetEnumSelectList<EnumParametersStudent>())
            {
                @if (item.Value == Model.serachParameter.ToString())
                {
                    <option selected="selected" class="test2" value="@item.Value" name="serachParameter">@item.Text</option>
                }
                else
                {
                <option value="@item.Value" name="serachParameter">@item.Text</option>
                }
             }
        </select>
        <input type="text" name="searchString" class="test" value="@Model.searchString"/>
        <input class="btn btn-primary"
               type="submit" value="Поиск" />
    </form>
    <table class="purpleHorizon" id="Table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortRecords="fip">ФИО</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortRecords="@ViewData["sortRecords"]">Дата рождения</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortRecords="@ViewData["sortRecords"]">Номер группы</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortRecords="@ViewData["sortRecords"]">Курс</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@item.GetFullName</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group.NumberGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group.Course.Name)
                    </td>
                    <td>
                        <a class="btn btn-primary"
                           asp-action="Edit" asp-route-id="@item.Id" asp-route-Url="@Context.Request.Path">Редактирование</a>
                        <a class="btn btn-primary" asp-action="Security" asp-controller="Security" asp-route-id="@item.UserId">Безопасность</a>
                        <form method="post" asp-action="Delete">
                            <button class="btn btn-danger" asp-action="Delete" asp-route-StudentId="@item.Id">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
            <tr>

                <td>
                    <a class="btn btn-primary"
                       asp-action="Create">Регистрация студента</a>
                </td>
            </tr>
        </tbody>

    </table>
    @{
        int ActionPage = @Model.PageNumber - 1;
    }
    <div class="content_detail__pagination cdp" actpage="@Model.PageNumber">
        <a href="#!-1" class="cdp_i" style="visibility:hidden">prev</a>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {   
            <a href="/Students?page=@i" class="cdp_i" onclick="jQueryAjaxGet('@Url.Action("Index", "Students", null, Context.Request.Scheme)', '@i')">@i</a>
        }
        <a href="#!+1" class="cdp_i" style="visibility:hidden">next</a>
    </div>
</body>
 