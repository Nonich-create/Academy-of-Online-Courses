@using Students.MVC.Helpers;
@using Students.DAL.Enum;
@model IEnumerable<Students.MVC.ViewModels.GroupViewModel>
@{
    ViewData["Title"] = "Страница групп";
    Layout = "_Layout";
}
<body>
    @{
        int skip = 0;
        if (Model.Count() > 0)
            skip = Model.Max(s => s.Id);
        int take = Model.Count();
    }
    <form method="post" asp-controller="Groups">
        <p>
            <select name="serachParameter" class="form-control">
                @foreach (var item in Html.GetEnumSelectList<EnumSearchParametersGroup>())
                {
                    @if (item.Value == @ViewData["serachParameter"].ToString())
                    {
                        <option selected="selected" value="@item.Value" name="serachParameter">@item.Text</option>
                    }
                    <option value="@item.Value" name="serachParameter">@item.Text</option>
                }
            </select>
            <input type="text" name="searchString" size="40" value="@ViewData["searchString"]" />
            <input type="hidden" name="take" value="10" />
            <input class="btn btn-primary"
                   type="submit" value="Поиск" />
        </p>
    </form>
    <form method="post" asp-controller="Groups">
        <p>
            <input type="hidden" name="action" value="@EnumPageActions.Add" />
            <input type="hidden" name="take" value="@take" />
            <input type="hidden" name="searchString" value="@ViewData["searchString"]" />
            <input type="hidden" name="serachParameter" value="@ViewData["serachParameter"]" />
            <input class="btn btn-primary"
                   type="submit" value="ещё" />
        </p>
    </form>
    <table class="purpleHorizon">
        <thead>
            <tr>
                <th>
                    Номер группы
                </th>
                <th>
                    Дата старта группы
                </th>
                <th>
                    Статус группы
                </th>
                <th>
                    Максимальное количество студентов
                </th>
                <th>
                    Менеджер
                </th>
                <th>
                    Преподователь
                </th>
                <th>
                    Курс
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountMax)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manager.GetFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Teacher.GetFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>
                        <a class="btn btn-primary"
                           asp-action="Edit" asp-route-id="@item.Id">Редактирование</a>
                        <a class="btn btn-primary"
                           asp-action="Details" asp-route-id="@item.Id">Подробнее</a>
                        <a class="btn btn-primary"
                           asp-action="StartGroup" asp-route-id="@item.Id">Запуск группы</a>
                        <form method="post" asp-controller="Groups" asp-action="Delete">
                            <button class="btn btn-danger" asp-controller="Groups" asp-action="Delete" asp-route-GroupId="@item.Id">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td>
                    <a class="btn btn-primary"
                       asp-action="Create">Новая группа</a>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="container">
        <form method="post" asp-controller="Groups">
            <p>
                <input type="hidden" name="action" value="@EnumPageActions.Back" />
                <input type="hidden" name="skip" value="@skip" />
                <input type="hidden" name="take" value="10" />
                <input class="btn btn-primary"
                       type="submit" value="Предыдущие" />
            </p>
        </form>
        <form method="post" asp-controller="Groups">
            <p>
                <input type="hidden" name="action" value="@EnumPageActions.Next" />
                <input type="hidden" name="skip" value="@skip" />
                <input type="hidden" name="take" value="10" />
                <input class="btn btn-primary"
                       type="submit" value="Следущие" />
            </p>
        </form>
    </div>
</body>
