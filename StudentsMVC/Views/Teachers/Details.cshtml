@model Students.MVC.ViewModels.TeacherViewModel
@{
    ViewData["Title"] = "Подробнее";
    Layout = "_Layout";
}
<div style="color: #FFFFFF">
    <img width="150" height="150" src="@Model.URLImagePhoto" alt="Нет изображения" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary"
       asp-action="Edit" asp-route-id="@Model.Id" asp-route-Url="@Model.ReturnUrl">Редактировать</a>
    <a class="btn btn-primary" asp-action="Security" asp-controller="Security" asp-route-id="@Model.UserId" asp-route-Url="@Model.ReturnUrl">Безопасность</a>
    <a class="btn btn-primary"
       asp-action="ReturnByUrl" asp-route-ReturnUrl="@Model.ReturnUrl">Назад</a>
</div>
<table class="purpleHorizon">
    <thead>
        <tr>
            <th>
                Курс
            </th>
            <th>
                Номер группы
            </th>
            <th>
                Статус группы
            </th>
            <th>
                Менеджер группы
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Groups)
        {
        <tr>
            <td>
                @item.Course.Name
            </td>
            <td>
                @item.NumberGroup
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupStatus)
            </td>
            <td>
                @item.Manager.Name
            </td>
        </tr>
        }
    </tbody>
</table>

