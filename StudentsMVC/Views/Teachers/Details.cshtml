@model Students.MVC.ViewModels.TeacherViewModel
@{
    ViewData["Title"] = "Подробнее";
    Layout = "_Layout";
}
<div style="color: #FFFFFF">
    <img width="150" height="150" src="@Model.URLImagePhoto" alt="Нет изображения" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary"
       asp-action="Edit" asp-route-id="@Model.Id" asp-route-Url="@Context.Request.Path">Редактировать</a> 
    <a class="btn btn-primary"
       asp-action="Index">Назад</a>
</div>
