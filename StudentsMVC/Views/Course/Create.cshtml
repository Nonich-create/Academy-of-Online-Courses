@model Students.MVC.ViewModels.CourseCreateViewModel
@{
    ViewData["Title"] = "Регистрация курса";
    Layout = "_LayoutAdditional";
}
<body>
    <div class="registration-form">
        <form asp-action="Create">
            <div class="validation" asp-validation-summary="All"></div>
            <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" asp-for="Name" id="name" placeholder="Название курсов">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control item" asp-for="Description" id="description" placeholder="Описание"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" asp-for="Duration" id="duration" placeholder="Длительность курсов">
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" asp-for="Price" id="price" placeholder="Цена">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="URLImagePhoto" class="form-control item" id="url" placeholder="Сcылка на фотографию">
            </div>
            <div class="form-group">
                <label asp-for="Visible"></label><br />
                <input asp-for="Visible" />
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-block create-account" />
            </div>
            <div class="form-group">
                <input type="submit" value="Назад" asp-action="Index" class="btn btn-block create-account" />
            </div>
        </form>
    </div>
</body>