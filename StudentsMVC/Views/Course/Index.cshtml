@using Students.MVC.Helpers;
@using Students.DAL.Enum;
@model IEnumerable<Students.MVC.ViewModels.CourseViewModel>

@{
    ViewData["Title"] = "Курсы";
    Layout = "_Layout";
}
<body>
    @{
        int skip = 0;
        if (Model.Count() > 0)
            skip = Model.Max(s => s.Id);
        int take = Model.Count();
    }
    <div>
        <form method="post" asp-controller="Course">
            <p>
                <input type="text" name="searchString" size="40" value="@ViewData["searchString"]" />
                <input type="hidden" name="take" value="10" />
                <input class="btn btn-primary"
                       type="submit" value="Поиск" />
            </p>
        </form>
        <form method="post" asp-controller="Course">
            <p style="position: absolute">
                <input type="hidden" name="action" value="@EnumPageActions.Add" />
                <input type="hidden" name="take" value="@take" />
                <input type="hidden" name="searchString" value="@ViewData["searchString"]" />
                <input type="hidden" name="serachParameter" value="@ViewData["serachParameter"]" />
                <input class="btn btn-primary"
                       type="submit" value="ещё" />
            </p>
        </form>
    </div>
    <table class="purpleHorizon">
        <thead>
            <tr>
                <th>
                    Названия курса
                </th>
                <th>
                    Описания
                </th>
                <th>
                    Длительность
                </th>
                <th>
                    Цена
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a class="btn btn-primary"
                           asp-action="Edit" asp-route-id="@item.Id">Редактирование</a>
                        <a class="btn btn-primary"
                           asp-action="Details" asp-route-id="@item.Id">Подробнее</a>
                        <a class="btn btn-primary"
                           asp-controller="Lessons" asp-action="IndexСourseId" asp-route-id="@item.Id">Уроки</a>
                        <a class="btn btn-primary"
                           asp-action="CreateLesson" asp-route-id="@item.Id">Добавить урок</a>
                        <form method="post" asp-controller="Course" asp-action="Delete">
                            <button class="btn btn-danger"asp-controller="Course" asp-action="Delete" asp-route-CourseId="@item.Id">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Create">Регистрация курсов</a>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="container">
        <form method="post" asp-controller="Course">
            <p>
                <input type="hidden" name="action" value="@EnumPageActions.Back" />
                <input type="hidden" name="skip" value="@skip" />
                <input type="hidden" name="take" value="10" />
                <input class="btn btn-primary"
                       type="submit" value="Предыдущие" />
            </p>
        </form>
        <form method="post" asp-controller="Course">
            <p>
                <input type="hidden" name="action" value="@EnumPageActions.Next" />
                <input type="hidden" name="skip" value="@skip" />
                <input type="hidden" name="take" value="10" />
                <input class="btn btn-primary"
                       type="submit" value="Следущие" />
            </p>
        </form>
    </div>
</body>
