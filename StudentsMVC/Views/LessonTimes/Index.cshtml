@model Students.MVC.Models.PaginationModel<Students.MVC.ViewModels.LessonTimesViewModel>
@using Students.DAL.Enum;
@{
    ViewData["Title"] = $"Расписания";
    Layout = "_Layout";
}
<body>
    <form method="post" asp-controller="LessonTimes">
        <p>
            <select name="searchParameter" class="form-control">
                @foreach (var item in Html.GetEnumSelectList<EnumParametersLessonTimes>())
                {
                    @if (item.Value == Model.searchParameter.ToString())
                    {
                        <option selected="selected" value="@item.Value" name="searchParameter">@item.Text</option>
                    }
                    else
                    {
                        <option value="@item.Value" name="searchParameter">@item.Text</option>
                    }
                }
            </select>
            <input type="text" name="searchString" size="40" value="@Model.searchString" />
            <input class="btn btn-primary" type="submit" value="Поиск" />
        </p>
    </form>
    <table class="purpleHorizon">
        <thead>
            <tr>
                <th>
                Номер группы
                </th>
                <th>
                  Номер занятия
                </th>
                <th>
                        Занятия
                </th>
                <th>
                   Дата проведение занятия
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group.NumberGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lesson.NumberLesson)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lesson.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfTheLesson)
                    </td>

                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" asp-route-Url="@Context.Request.Path">Редактирование</a>
                        <form method="post" asp-controller="Lessons" asp-action="Delete">
                            <button class="btn btn-danger" asp-controller="Lessons" asp-action="Delete" asp-route-LessonId="@item.Id">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>

            }
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Create">Добавить расписания</a>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="content_detail__pagination cdp" actpage="@Model.PageNumber">
        <a href="#!-1" class="cdp_i" style="visibility:hidden">prev</a>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a href="/LessonTimes?searchString=@Model.searchString&searchParameter=@Model.searchParameter&page=@i" class="cdp_i" onclick="jQueryAjaxGet('@Url.Action("Index", "Students", null, Context.Request.Scheme)', '@i')">@i</a>
        }
        <a href="#!+1" class="cdp_i" style="visibility:hidden">next</a>
    </div>
</body>
