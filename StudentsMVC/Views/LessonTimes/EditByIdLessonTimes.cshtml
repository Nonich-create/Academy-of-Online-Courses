@model Students.MVC.ViewModels.LessonTimesViewModel
@{
    ViewData["Title"] = "Редактирование расписания к занятию";
    Layout = "_LayoutAdditional";
}
<body>
    <div class="registration-form">
        <form asp-action="EditByIdLessonTimes">
            <div class="validation" asp-validation-summary="All">
                <input type="hidden" asp-for="@Model.ReturnUrl" />
                <input type="hidden" asp-for="@Model.GroupId" />
                <input type="hidden" asp-for="@Model.LessonId" />
                <div class="form-group">
                    <label class="form_label">Курс: @Model.Group.Course.Name</label><br />
                    <label class="form_label">Группа: @Model.Group.NumberGroup</label><br />
                    <label class="form_label">Урок: @Model.Lesson.NumberLesson @Model.Lesson.Name</label><br />
                    <label class="form_label">Время проведения занятия</label><br />
                    <input type="datetime-local" class="form-control item" asp-for="DateOfTheLesson" id="dateOfTheLesson" placeholder="Время проведения занятия" />
                    <span asp-validation-for="DateOfTheLesson" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Изменить" class="btn btn-block create-account" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Назад" asp-action="ReturnByUrl" asp-route-ReturnUrl="@Model.ReturnUrl" class="btn btn-block create-account" />
                </div>
            </div>
        </form>
    </div>
</body>