@model Students.MVC.ViewModels.LessonTimesViewModel

@{
    ViewData["Title"] = "Редактирование";
    Layout = "_LayoutAdditional";
}

<body>
    <div class="registration-form">
        <form asp-action="Edit">
            <div class="validation" asp-validation-summary="All"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GroupId" />
            <input type="hidden" asp-for="LessonId" />
            <div class="form-group">
                <label class="form_label">Дата проведения</label><br />
                <input type="text" class="form-control item" asp-for="DateOfTheLesson" id="dateOfTheLesson" placeholder="Дата проведения">
                <span asp-validation-for="DateOfTheLesson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-block create-account" />
            </div>
            <div class="form-group">
                <input type="submit" value="Назад" asp-action="Index" class="btn btn-block create-account" />
            </div>
        </form>
    </div>
</body>
