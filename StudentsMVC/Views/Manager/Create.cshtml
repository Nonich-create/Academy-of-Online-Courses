@model Students.MVC.ViewModels.ManagerViewModel
@{
    ViewData["Title"] = "Регистрация методиста";
    Layout = "_LayoutAdditional";
}
<body>
    <div class="registration-form">
        <form asp-action="Create">
            <div class="validation" asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="form_label">Email</label><br />
                <input type="email" class="form-control item" asp-for="Email" id="username" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Пароль</label><br />
                <input type="password" class="form-control item" asp-for="Password" id="username" placeholder="Пароль">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Повторный пароль</label><br />
                <input type="password" class="form-control item" asp-for="PasswordConfirm" id="username" placeholder="Повторный пароль">
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Номер телефона</label><br />
                <input type="tel" class="form-control item" asp-for="PhoneNumber" id="username" placeholder="Номер телефона">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Имя</label><br />
                <input type="text" class="form-control item" asp-for="Name" id="username" placeholder="Имя">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Фамилия</label><br />
                <input type="text" class="form-control item" asp-for="Surname" id="username" placeholder="Фамилия">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form_label">Отчество</label><br />
                <input type="text" class="form-control item" asp-for="MiddleName" id="username" placeholder="Отчество">
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-block create-account" />
            </div>
            <div class="form-group">
                <input type="submit" value="Назад" asp-action="Index" class="btn btn-block create-account" />
            </div>
        </form>
    </div>
</body>